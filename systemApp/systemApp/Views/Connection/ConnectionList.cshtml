@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <title></title>
</head>
<body>
    <div class="jumbotron">
        <h1>Connectionlist</h1>
        <p class="lead">Connections available</p>
    </div>

    <button title="refresh" onclick="location.href = '@(Url.Action("Index", "Connection"))'">
        <span class="glyphicon glyphicon-refresh"></span>
    </button>

    <div class="container">
        <table class="table table-hover table-responsive ipAddressRow">
            <thead>
                <tr>
                    <th>IP</th>
                    <th>Name</th>
                </tr>
            </thead>           
            <tbody>
                @foreach (var x in ConnectionManager.connectionList)
                {
                    <tr title="click for more info" onclick="location.href = '@(Url.Action("Index", "Info",  new { IP = @x.IP }))'">
                        <td>@x.IP</td>
                        <td>@x.Name</td>
                    </tr>}                   
            </tbody>
        </table>
        
        <form action="@(Url.Action("Index", "Info"))" method="post">
            <input type="text" name="IP" />
            <input type="submit" name="submitIp" value="Go!"/>
        </form>

    </div>
</body>
</html>
